  Group {
    LayoutMode: Top;
    Anchor: (Top: 10);
    FlexWeight: 1;
  }

  // Teleporters
  Group {
    LayoutMode: Top;
    Padding: (Horizontal: 4);

    $E.@ListTitle #WorldTeleportersCount {
      @Title = "Teleporters";
      @Text = "2";
    }

    Group #WorldTeleportersList {
      LayoutMode: TopScrolling;
      ScrollbarStyle: $C.@DefaultScrollbarStyle;
      Anchor: (Height: 100);
      Background: #000000(0.13);

      Group {
        LayoutMode: Left;

        $E.@EntityComponentListItem {
          @Text = "Cool House";
        }

        $E.@InlineTextButton {
          @Text = "tp";
        }
      }

      Group {
        LayoutMode: Left;

        $E.@EntityComponentListItem {
          @Text = "Toaster Land";
        }

        $E.@InlineTextButton {
          @Text = "tp";
        }
      }
    }
