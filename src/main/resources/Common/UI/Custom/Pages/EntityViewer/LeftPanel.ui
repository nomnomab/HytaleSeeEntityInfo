$C = "../../Common.ui";
$E = "Common.ui";

@LeftPanel = Group {
  LayoutMode: TopScrolling;
  ScrollbarStyle: $C.@DefaultScrollbarStyle;
  Anchor: (Width: $E.@LeftPanelWidth);
  Padding: 0;
  //        Background: #ff0000(0.2);

  Label {
    Style: (
      FontSize: 14,
      RenderBold: true,
      TextColor: #ffffff
    );
    Text: "World";
  }

  $C.@DropdownBox #WorldDropdown {
    Anchor: (Left: 0, Right: 0, Height: $C.@DropdownBoxHeight);
    Value: "default";
  }

  Group {
    Anchor: (Top: 10);
  }

  // World details
  Group #WorldDetails {
    LayoutMode: Top;
    Padding: (Horizontal: 4);
    Anchor: (Height: 330);

    Label {
      Style: (
        FontSize: 14,
        RenderBold: true,
        TextColor: #ffffff
      );
      Text: "Details";
    }

    Group #WorldPropertiesList {
      LayoutMode: Top;

//      $E.@EntityPropertyItem #WorldName {
