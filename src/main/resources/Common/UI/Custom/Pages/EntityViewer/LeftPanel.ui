//      $E.@EntityPropertyItem #WorldTime {
//        @Key = "time";
//        @Val = "Day 4, 11:32";
//      }
    }

    Group {
      Anchor: (Top: 10);
    }

    Group {
      LayoutMode: Left;

      $E.@InlineTextButton #ReloadButton {
        Text: "reload";
      }

      Group {
        Anchor: (Right: 5);
      }

      $E.@InlineTextButton #WorldTpButton {
        Text: "tp";
      }
    }

    Group {
      LayoutMode: Left;

      $E.@InlineTextButton #WorldNewEntity {
        Text: "new entity (dev)";
      }
    }
  }

  Group {
    Anchor: (Top: 10);
  }

  // Players
  Group {
    LayoutMode: Top;
    Padding: (Horizontal: 4);

    $E.@ListTitle #WorldPlayersCount {
      @Title = "Players";
      @Text = "1";
    }

    Group #WorldPlayersList {
      LayoutMode: TopScrolling;
      ScrollbarStyle: $C.@DefaultScrollbarStyle;
      Anchor: (Height: 100);
      Background: #000000(0.13);

